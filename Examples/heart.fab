function GetValue(theta)
	x=16*math.pow(math.sin(theta),3)
	y=13*math.cos(theta)-5*math.cos(2*theta)-2*math.cos(3*theta)-math.cos(4*theta)

	return x,y
end

function GetVertices(steps)
	local verts = {}

	for i=0, steps do
		local u = i/steps*math.pi*2
		local x,y = GetValue(u)
		table.insert(verts, {x,y,0})
	end
	return verts
end

local verts = GetVertices(360)
for _,v in ipairs(verts) do
	translate(v)
	--tetrahedron()
	--sphere()
	hexahedron(0.5)
end
